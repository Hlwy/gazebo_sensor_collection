<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="sensor_axis_m5013">

     <xacro:include filename="$(find gazebo_sensor_collection)/urdf/includes/materials.urdf.xacro"/>

     <xacro:property name="ptz_joint_effort_limit" value="100.0"/>
     <xacro:property name="ptz_joint_velocity_limit" value="100.0"/>
     <xacro:property name="ptz_joint_friction" value="0.1"/>
     <xacro:property name="ptz_joint_damping" value="0.1"/>
     <xacro:property name="ptz_mechanical_reduction" value="1.0"/>


     <xacro:macro name="sensor_axis_m5013" params="name parent *origin color:='white'">

          <joint name="${name}_joint" type="fixed">
               <axis xyz="0 1 0"/>
               <xacro:insert_block name="origin"/>
               <parent link="${parent}"/>
               <child link="${name}_link"/>
          </joint>

          <link name="${name}_link">
               <inertial>
                    <origin xyz="0 0 0" rpy="0 0 0"/>
                    <mass value="0.1"/>
                    <origin xyz="0 0 0" rpy="0 0 0"/>
                    <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
               </inertial>
               <visual>
                    <!-- to center the axis model -->
                    <origin xyz="0 0 0" rpy="0 ${M_PI/2} 0"/>
                    <geometry>
                         <mesh filename="file://$(find gazebo_sensor_collection)/meshes/cameras/axis/axis_m5013.dae" scale="1.0 1.0 1.0"/>
                    </geometry>
                    <xacro:color_material color="${color}"/>
               </visual>
               <collision>
                    <origin xyz="0.0 0.0 0" rpy="0 ${M_PI/2} 0"/>
                    <geometry>
                         <mesh filename="file://$(find gazebo_sensor_collection)/meshes/cameras/axis/axis_m5013.stl" scale="1.0 1.0 1.0"/>
                    </geometry>
               </collision>
          </link>

          <joint name="joint_${name}_pan" type="revolute">
               <axis xyz="0 0 -1"/>
               <origin xyz="0.04 0.0 0.0" rpy="0 0 0"/> <!-- check the displacement -->
               <parent link="${name}_link"/>
               <child link="${name}_pan_link"/>
               <limit effort="${ptz_joint_effort_limit}" velocity="${ptz_joint_velocity_limit}" lower="-3.1416" upper="3.1416"/>
               <joint_properties damping="${ptz_joint_damping}" friction="{ptz_joint_friction}"/>
          </joint>

          <link name="${name}_pan_link">
               <inertial>
                    <mass value="0.1"/>
                    <origin xyz="0 0 0" rpy="0 0 0"/>
                    <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
               </inertial>
          </link>

          <transmission name="${name}_pan_trans">
               <type>transmission_interface/SimpleTransmission</type>
               <joint name="joint_${name}_pan">
                    <hardwareInterface>PositionJointInterface</hardwareInterface>
               </joint>
               <actuator name="pan_motor">
                    <hardwareInterface>PositionJointInterface</hardwareInterface>
                    <mechanicalReduction>${ptz_mechanical_reduction}</mechanicalReduction>
               </actuator>
          </transmission>

          <joint name="joint_${name}_tilt" type="revolute">
               <axis xyz="0 -1 0"/>
               <origin xyz="0.0 0.0 0.0"/>
               <parent link="${name}_pan_link"/>
               <child link="${name}_tilt_link"/>
               <limit effort="${ptz_joint_effort_limit}" velocity="${ptz_joint_velocity_limit}" lower="-1.5708" upper="1.5708"/>
               <joint_properties damping="${ptz_joint_damping}" friction="{ptz_joint_friction}"/>
          </joint>

          <link name="${name}_tilt_link">
               <inertial>
                    <mass value="0.1"/>
                    <origin xyz="0 0 0" rpy="0 0 0"/>
                    <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
               </inertial>
          </link>

          <transmission name="${name}_tilt_trans">
               <type>transmission_interface/SimpleTransmission</type>
               <joint name="joint_${name}_tilt">
                    <hardwareInterface>PositionJointInterface</hardwareInterface>
               </joint>
               <actuator name="tilt_motor">
                    <hardwareInterface>PositionJointInterface</hardwareInterface>
                    <mechanicalReduction>${ptz_mechanical_reduction}</mechanicalReduction>
               </actuator>
          </transmission>

          <joint name="${name}_frame_joint" type="fixed">
               <origin xyz="0 0 0" rpy="0 0 0"/>
               <parent link="${name}_tilt_link"/>
               <child link="${name}_frame"/>
          </joint>

          <link name="${name}_frame">
               <inertial>
                    <mass value="0.001"/>
                    <origin xyz="0 0 0"/>
                    <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
               </inertial>
          </link>

          <!-- Optical frame -->
          <joint name="${name}_optical_joint" type="fixed">
               <origin xyz="0 0 0" rpy="${-M_PI/2} 0 ${-M_PI/2}"/>
               <parent link="${name}_frame"/>
               <child link="${name}_optical_frame"/>
          </joint>

          <link name="${name}_optical_frame">
               <inertial>
                    <mass value="0.001"/>
                    <origin xyz="0 0 0"/>
                    <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
               </inertial>
          </link>

          <!-- Axis sensor for simulation -->
          <xacro:sensor_axis_m5013_gazebo name="${name}"/>
          <xacro:color_gazebo parent="${name}_link" color="${color}"/>

     </xacro:macro>

     <!-- ====================================================
                           Gazebo
     ========================================================= -->

     <xacro:macro name="sensor_axis_m5013_gazebo" params="name">
          <gazebo reference="${name}_frame"> <!-- the image will be generated from this (${name}_frame) point of view, with the front being the X axis -->
               <sensor type="camera" name="${name}_sensor">
                    <update_rate>30.0</update_rate>
                    <always_on>1</always_on>

                    <camera name="${name}">
                         <horizontal_fov>${60.0*M_PI/180.0}</horizontal_fov>
                         <image>
                              <format>R8G8B8</format>
                              <width>640</width>
                              <height>480</height>
                         </image>
                         <clip>
                              <near>0.05</near>
                              <far>8.0</far>
                         </clip>
                         <distortion>
                              <k1>0.0</k1>
                              <k2>0.0</k2>
                              <k3>0.0</k3>
                              <p1>0.0</p1>
                              <p2>0.0</p2>
                              <center>0.5 0.5</center>
                         </distortion>
                    </camera>

                    <plugin name="${name}_controller" filename="libgazebo_ros_camera.so">
                         <camera_name>${name}</camera_name>
                         <ros>
                              <!-- <namespace>custom_ns</namespace> -->
                              <remapping>image_raw:=image_raw</remapping>
                              <remapping>camera_info:=camera_info</remapping>
                         </ros>
                         <frame_name>${name}_optical_frame</frame_name>

                         <!-- this is just which name the Image msg will have, it does not affect the simulation.
                         However must be set to the optical_frame,  -->
                         <hack_baseline>0.07</hack_baseline>
                    </plugin>
               </sensor>
          </gazebo>

     </xacro:macro>


</robot>
